# Ignore bundler config.
/.bundle

# Ignore the log directory and all logfiles.
log/*
!/log/.keep

# Ignore temporary files and directories.
tmp/*
!/tmp/.keep

# Ignore uploaded files in development.
storage/*
!/storage/.keep

# Ignore generated schema files.
db/*.sqlite3
db/*.sqlite3-journal
db/schema.rb
db/structure.sql
db/*.seed

# Ignore development/test secrets.
config/master.key
config/credentials.yml.enc

# Ignore node_modules and yarn files.
node_modules/
yarn-error.log

# Ignore compiled assets.
/public/assets
/public/packs
/public/packs-test
/public/system
/public/uploads

# Ignore .env files (use dotenv or figaro for environment variables).
.env
.env.*

# Ignore byebug command history file.
.byebug_history

# Ignore Mac and Linux generated files.
*.swp
*.swo
*.DS_Store

# Ignore coverage reports generated by testing tools like SimpleCov.
/coverage/

# Ignore application-specific temp files.
/.ruby-gemset
/.ruby-version
/.idea
/.vscode